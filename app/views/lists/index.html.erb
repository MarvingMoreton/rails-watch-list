<%# Create class to contain image background to create a banner %>
<br>
<br>
<div class="hero-image lists-page">
  <div class="container hero-text center-text">
    <h1>Find movies</h1>
    <p>LFGGG</p>
    <button>My list</button>
  </div>
</div>

<H1>All Lists</H1>

<ul class="list-cards">
<% @lists.each do |list|%>
  <li>
  <%= link_to list.name, list_path(list) %>
  </li>

    <% if list.photos.attached?%>
      <%list.photos.each do |photo|%>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>
      <%end %>
    <%end %>
<% end %>
</ul>

<%# Create a movie list %>
<%= link_to "Create a movie list", new_list_path, :class => "btn btn-outline-success my-2 my-sm-0"%>
